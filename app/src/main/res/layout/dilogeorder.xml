<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/ed_phono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="phone"
        android:inputType="text"
        android:text=""
        android:textColor="#2e2e"
        android:textColorHint="#f2ff"
        android:textSize="24sp"
        android:paddingStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:met_baseColor="#2e2e"
        app:met_floatingLabel="highlight"
        app:met_maxCharacters="15"
        app:met_singleLineEllipsis="true"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/bt_delete"
        android:layout_width="137dp"
        android:layout_height="52dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/backgroung_bt"
        android:drawableStart="@android:drawable/ic_menu_delete"
        android:text="Delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_phono" />

    <info.hoang8f.widget.FButton
        android:id="@+id/bt_call"
        android:layout_width="134dp"
        android:layout_height="52dp"
        android:layout_marginStart="8dp"
        android:drawableStart="@drawable/fui_ic_phone_white_24dp"
        android:text="Call"
        app:layout_constraintBottom_toBottomOf="@+id/bt_delete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bt_delete"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>